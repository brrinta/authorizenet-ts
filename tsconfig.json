{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "lib": [
            "es6",
            "es2015"
        ],
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "lib",
        "node_modules",
        "src/**/*.spec.ts"
    ],
    "include": [
        "src"
    ]
}
